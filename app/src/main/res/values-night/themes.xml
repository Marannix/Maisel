<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maisel" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/maisel_splash_screen_background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_stich</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Maisel</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/maisel_splash_screen_background_dark</item>
        <item name="android:navigationBarColor">@color/maisel_splash_screen_background_dark</item>
    </style>
</resources>
