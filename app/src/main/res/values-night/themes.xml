<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maisel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mirage</item>
        <item name="colorPrimaryVariant">@color/mirage</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mirage</item>
        <item name="colorSecondaryVariant">@color/mirage</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/maisel_splash_screen_background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_stich</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Maisel</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/maisel_splash_screen_background_dark</item>
        <item name="android:navigationBarColor">@color/maisel_splash_screen_background_dark</item>
    </style>
</resources>
